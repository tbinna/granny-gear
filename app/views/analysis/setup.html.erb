<div class="page-header">
	<h1>Gear Configuration Setup</h1>
</div>

<p class="lead">Fill in the gear configuration for your analysis.</p>

<div class="row">
	<div class="col-md-12">
		<div class="panel-group" id="accordion">
			<div class="panel panel-default">
				<div class="panel-heading" id="heading1">
					<h3 class="panel-title">
						<a data-toggle="collapse" data-parent="#accordion" href="#collapse1" aria-expanded="true" aria-controls="collapse1">
							Derailleur Gears
						</a>
					</h3>
				</div>
				<div id="collapse1" class="panel-collapse collapse in" aria-labelledby="heading1">
					<div class="panel-body">
						<%= render 'form_derailleur_gear_setup' %>
					</div>
				</div>
			</div>
			<div class="panel panel-default">
				<div class="panel-heading" id="heading2">
					<h3 class="panel-title">
						<a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse2" aria-expanded="false" aria-controls="collapse2">
							Internal Gear Hub
						</a>
					</h3>
				</div>
				<div id="collapse2" class="panel-collapse collapse" aria-labelledby="heading2">
					<div class="panel-body">
						<%= render 'form_internal_gear_hub_setup' %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>