<h5>Internal Gear Hub</h5>
<%= form_for(@internal_gear_hub) do |f| %>
<div class="input-group">
	<span class="input-group-addon">Gear Ratio</span>
	<%= f.text_field :gear_ratio, class: "form-control", placeholder: "0.279,0.316,0.36,0.409,0.464,0.528,0.6,0.682,0.774,0.881,1,1.135,1.292,1.467", value: "0.279,0.316,0.36,0.409,0.464,0.528,0.6,0.682,0.774,0.881,1,1.135,1.292,1.467" %>
	<span class="input-group-addon">Chainring</span>
	<%= f.text_field :chainring, class: "form-control", placeholder: "40", value: "40" %>
	<span class="input-group-addon">Sprocket</span>
	<%= f.text_field :sprocket, class: "form-control", placeholder: "16", value: "16" %>
</div>
<% end %>