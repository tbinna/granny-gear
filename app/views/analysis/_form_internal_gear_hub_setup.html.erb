<%= form_tag("/analysis/result", method: "get") do %>
<%= hidden_field_tag 'description', 'IGH' %>
<div class="form-group form-inline">
	<%= label_tag :gear_ratio %>
	<% @gear_ratio_placeholder.each do |placeholder| %>
	<div class="input-group">
		<%= number_field_tag :gear_ratio.to_s + "[]", nil, min: 0.0, max: 10.0, step: 0.001, placeholder: placeholder, value: placeholder %>
	</div>
	<% end %>
</div>
<div class="form-group form-inline">
	<%= label_tag :chainring %>
	<%= text_field_tag :chainring, nil, placeholder: "40", value: "40" %>

	<%= label_tag :sprocket %>
	<%= text_field_tag :sprocket, nil, placeholder: "16", value: "16" %>
</div>
<div class="form-group">
	<%= submit_tag "Analyze", class: "btn btn-default pull-right" %>
</div>
<% end %>