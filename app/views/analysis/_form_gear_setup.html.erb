<%= form_tag("result", method: "get") do %>
<div class="col-md-6">
	<div class="panel panel-default">
		<div class="panel-body">
			<h5>Derailleur Gears</h5>
			<div class="input-group">
				<span class="input-group-addon">Crankset</span>
				<%= text_field_tag :fc, nil, class: "form-control", placeholder: "24, 32, 44", value: "24, 32, 44" %>
			</div>
			<br>
			<div class="input-group">
				<span class="input-group-addon">Cassette</span>
				<%= text_field_tag :cs, nil, class: "form-control", placeholder: "12, 14, 16, 18, 20, 23, 26, 30, 34", value: "12, 14, 16, 18, 20, 23, 26, 30, 34" %>
			</div>
		</div>
	</div>
</div>
<div class="col-md-6">
	<div class="panel panel-default">
		<div class="panel-body">
			<h5>Internal Gear Hub</h5>
			<div class="input-group">
				<span class="input-group-addon">Gear Ratio</span>
				<%= text_field_tag :gr, nil, class: "form-control", placeholder: "0.279,0.316,0.36,0.409,0.464,0.528,0.6,0.682,0.774,0.881,1,1.135,1.292,1.467", value: "0.279,0.316,0.36,0.409,0.464,0.528,0.6,0.682,0.774,0.881,1,1.135,1.292,1.467" %>
			</div>
			<br>
			<div class="input-group">
				<span class="input-group-addon">Chainring</span>
				<%= text_field_tag :cr, nil, class: "form-control", placeholder: "40", value: "40" %>
				<span class="input-group-addon">Sprocket</span>
				<%= text_field_tag :sp, nil, class: "form-control", placeholder: "16", value: "16" %>
			</div>
		</div>
	</div>
</div>
<div class="col-md-12">
	<%= submit_tag "Analyze", class: "btn btn-default pull-right" %>
</div>
<% end %>