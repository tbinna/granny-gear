<div class="col-md-12">
	<div class="panel-group" id="accordion">
		<div class="panel panel-default">
			<div class="panel-heading" role="tab" id="heading1">
				<h3 class="panel-title">
					<a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse1" aria-expanded="false" aria-controls="collapse1">Derailleur Gears</a>
				</h3>
			</div>
			<div id="collapse1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading1">
				<div class="panel-body">
					<%= form_tag("/analysis/result", method: "get") do %>
					<%= hidden_field_tag 'gear_type', 'DG' %>
					<div class="input-group">
						<span class="input-group-addon">Crankset</span>
						<%= text_field_tag :chainring, nil, class: "form-control", placeholder: "24, 32, 44", value: "24, 32, 44" %>
					</div>
					<br>
					<div class="input-group">
						<span class="input-group-addon">Cassette</span>
						<%= text_field_tag :cassette, nil, class: "form-control", placeholder: "12, 14, 16, 18, 20, 23, 26, 30, 34", value: "12, 14, 16, 18, 20, 23, 26, 30, 34" %>
					</div>
					<br>
					<%= submit_tag "Analyze", class: "btn btn-default pull-right" %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading" role="tab" id="heading2">
				<h3 class="panel-title">
					<a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse2" aria-expanded="false" aria-controls="collapse2">Internal Gear Hub</a>
				</h3>
			</div>
			<div id="collapse2" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading2">
				<div class="panel-body">
					<%= form_tag("/analysis/result", method: "get") do %>
					<%= hidden_field_tag 'gear_type', 'IGH' %>
					<div class="input-group">
						<span class="input-group-addon">Gear Ratio</span>
						<%= text_field_tag :gear_ratio, nil, class: "form-control", placeholder: "0.279,0.316,0.36,0.409,0.464,0.528,0.6,0.682,0.774,0.881,1,1.135,1.292,1.467", value: "0.279,0.316,0.36,0.409,0.464,0.528,0.6,0.682,0.774,0.881,1,1.135,1.292,1.467" %>
					</div>
					<br>
					<div class="input-group">
						<span class="input-group-addon">Chainring</span>
						<%= text_field_tag :chainring, nil, class: "form-control", placeholder: "40", value: "40" %>
						<span class="input-group-addon">Sprocket</span>
						<%= text_field_tag :sprocket, nil, class: "form-control", placeholder: "16", value: "16" %>
					</div>
					<br>
					<%= submit_tag "Analyze", class: "btn btn-default pull-right" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>