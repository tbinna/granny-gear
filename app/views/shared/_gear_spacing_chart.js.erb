<script>
	$(function() {
		new Highcharts.Chart({
			chart: {
				type: "line",
				renderTo: "gear_spacing_chart"
			},
			colors:  ["#343E4E", "#434D5D", "#525C6D", "#616C7D", "#717B8D", "#808B9D", "#8F9AAD", "#9EAABD", "#AEB9CD", "#BDC9DD", "#CCD8ED", "#DCE8FD"],
			title: {
				text: null
			},
			xAxis: {
				title: {
					text: "Spacing between gears"
				},
				categories: <%= drivetrain.gear_spacing_categories.to_json.html_safe %>
			},
			yAxis: {
				title: {
					text: "Gear spacing [%]"
				},
				max: 0.2
			},
			legend: {
				enabled: false
			},
			credits: {
 				enabled: false
			},
			series: <%= [{name: "Gear spacing", data: drivetrain.gear_spacing}].to_json.html_safe %>
		});
	});
</script>