<%= form_tag("/internal-gear-hub-analysis/result", method: "post") do %>
<div class="form-group col-md-12">
	<%= label_tag "Gear Hub", nil, class: "col-md-3" %>
	<div class="col-md-9">
		<%= select_tag(:id, options_from_collection_for_select(InternalGearHub.all, :id, :description)) %>
	</div>
</div>
<div class="form-group">
	<%= submit_tag "Analyze", class: "btn btn-default pull-right" %>
</div>
<% end %>